{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.8.5",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": [
    "webNavigation",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "logger.js",
        "content_style.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons.png",
    "48": "icons.png",
    "128": "icons.png"
  }
}


