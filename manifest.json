{
  "manifest_version": 3,
  "name": "Youtube Adblock Bypass",
  "version": "1.5.5",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": [
    "scripting",
    "webNavigation",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons.png",
    "48": "icons.png",
    "128": "icons.png"
  }
}


